<script>
  // Пошаговое открытие блоков
  const nextButtons = document.querySelectorAll('.next-btn');
  nextButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const targetId = btn.dataset.target;
      const target = document.getElementById(targetId);
      if(target){
        target.classList.add('active');
        target.scrollIntoView({behavior:'smooth'});
      }
    });
  });

  // Обработка формы подборки
  document.getElementById('selectionForm').addEventListener('submit', function(e){
    e.preventDefault();
    const form = e.target;

    const type = form.elements['type'].value;
    const new_or_old = form.elements['new_or_old'].value;
    const district = form.elements['district'].value;
    const payment = form.elements['payment'].value;

    const resultDiv = document.getElementById('result');
    resultDiv.style.display = 'block';
    resultDiv.innerHTML = `
      <h3 style="color:#1a73e8;">Ваша персональная подборка:</h3>
      <p><strong>Тип объекта:</strong> ${type}</p>
      <p><strong>Новое/вторичка:</strong> ${new_or_old}</p>
      <p><strong>Район:</strong> ${district}</p>
      <p><strong>Способ покупки:</strong> ${payment}</p>
      <p>Мы подберём для вас лучшие проверенные объекты и свяжемся с вами!</p>
    `;
    resultDiv.scrollIntoView({behavior:'smooth'});
  });
</script>

